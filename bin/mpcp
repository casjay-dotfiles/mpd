netcat="$(command -v nc 2>/dev/null || command -v netcat 2>/dev/null)"
__nc() { $netcat -c "$@" && true || $netcat -w 1 "$@"; }

echo "$@" | __nc "$MPDSERVER" 6600

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End
